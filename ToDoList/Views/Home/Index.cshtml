@model IEnumerable<ToDoList.Models.ToDoItem>

<h2>All Tasks</h2>

@if (Model == null || !Model.Any())
{
    <p>No tasks available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Assigned To</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Status</td>
                    <td>@item.AssignedTo</td>
                    <td>
                        <a href="@Url.Action("Edit", "Todo", new { id = item.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Todo", new { id = item.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}