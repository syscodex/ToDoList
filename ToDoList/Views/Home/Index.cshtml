@model IEnumerable<ToDoList.Models.ToDoItem>

<h2>To-Do List</h2>

@if (Model == null || !Model.Any())
{
    <p>No tasks available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <td>Details</td>
                <th>Status</th>
                <th>Assigned To</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Details</td>
                    <td>@item.Status</td>
                    <td>@item.AssignedTo</td>
                    <td>
                        <button class="btn btn-primary edit-btn" data-id="@item.Id" data-title="@item.Title">Edit</button>
                        <button class="btn btn-danger" onclick="deleteTask(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
