@{
    Layout = "_Layout";
}

<!-- Welcome Section -->
<div id="landing-welcome-section" class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        <h1 class="landing-title text-primary mb-3">Welcome to Your To-Do List</h1>
        <p class="landing-subtitle text-secondary mb-4">Effortlessly manage your tasks and stay organized with ease!</p>
        <a href="/Todo/Index" class="btn landing-btn btn-primary btn-lg shadow-sm px-5 py-3 rounded-pill">Get Started</a>
    </div>
</div>

<!-- Manage Tasks Section -->
<div id="landing-manage-tasks-section" class="container-fluid text-center bg-light py-5">
    <h2 class="h4 mb-4 text-dark">Manage your tasks efficiently</h2>
    <p class="mb-5 text-muted">Keep track of your progress and stay organized by creating tasks, setting deadlines, and assigning responsibilities.</p>

    <!-- Cards Row -->
    <div class="row justify-content-center">
        <!-- Organize Card -->
        <div class="col-md-3 mb-4">
            <div class="landing-card shadow-sm border-0">
                <div class="landing-card-body">
                    <h5 class="landing-card-title text-primary">Organize</h5>
                    <p class="landing-card-text text-muted">Create, update, and categorize tasks easily to stay on top of your responsibilities.</p>
                </div>
            </div>
        </div>
        <!-- Assign Card -->
        <div class="col-md-3 mb-4">
            <div class="landing-card shadow-sm border-0">
                <div class="landing-card-body">
                    <h5 class="landing-card-title text-primary">Assign</h5>
                    <p class="landing-card-text text-muted">Assign tasks to team members and track progress through simple updates and notifications.</p>
                </div>
            </div>
        </div>
        <!-- Track Card -->
        <div class="col-md-3 mb-4">
            <div class="landing-card shadow-sm border-0">
                <div class="landing-card-body">
                    <h5 class="landing-card-title text-primary">Track</h5>
                    <p class="landing-card-text text-muted">Monitor the status of your tasks and keep a record of completed and pending work.</p>
                </div>
            </div>
        </div>
    </div>
</div>
