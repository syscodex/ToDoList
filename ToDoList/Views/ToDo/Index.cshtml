@model List<ToDoList.Models.ToDoItem>
@using ToDoList.Helpers

@{
    ViewData["Title"] = "To-Do List";
}

<!-- Main Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@ViewData["Title"]</h1>
        @if (Model != null && Model.Any())
        {
            <!-- Only show this button if there are tasks -->
            <a href="@Url.Action("Create", "ToDo")" class="btn btn-primary">Create New Task</a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-light rounded">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>

                            <!-- Status Section with Icon and Text -->
                            <p class="text-muted d-flex align-items-center">
                                <span class="badge @ToDoHelpers.GetStatusClass(item.Status).BadgeClass">
                                    <i class="@ToDoHelpers.GetStatusClass(item.Status).IconClass"></i>
                                    @ToDoHelpers.GetStatusDisplayName(item.Status)
                                </span>
                            </p>

                            <p>Assigned To: <strong>@(item.AssignedTo ?? "Not Assigned")</strong></p>

                            <!-- Card for Date and Time -->
                            <div class="card p-2 mt-2 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                    <span class="ms-2">@item.DateStarted.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="d-flex align-items-center mt-1">
                                    <i class="fas fa-clock text-muted"></i>
                                    <span class="ms-2">@item.DateStarted.ToString("hh:mm tt")</span>
                                </div>

                                @if (item.DateOfCompletion.HasValue)
                                {
                                    <div class="d-flex align-items-center mt-3">
                                        <i class="fas fa-calendar-check text-success"></i>
                                        <span class="ms-2">@item.DateOfCompletion.Value.ToString("MMM dd, yyyy")</span>
                                    </div>

                                    <div class="d-flex align-items-center mt-1">
                                        <i class="fas fa-clock text-success"></i>
                                        <span class="ms-2">@item.DateOfCompletion.Value.ToString("hh:mm tt")</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center mt-3">
                                        <i class="fas fa-calendar-check text-warning"></i>
                                        <span class="ms-2">No Completion Date</span>
                                    </div>
                                }
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Edit", "ToDo", new { id = item.Id })" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "ToDo", new { id = item.Id })" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State for No Tasks -->
            <div class="alert alert-info text-center empty-state">
                <i class="fas fa-check-circle"></i>
                <p>Looks like you're all caught up! Start by creating a task.</p>

                <!-- Larger Create New Task Button -->
                <a href="@Url.Action("Create", "ToDo")" class="btn btn-primary btn-lg">Create New Task</a>
            </div>
        }
    </div>
</main>
