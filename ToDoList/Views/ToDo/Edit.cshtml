@model ToDoList.Models.ToDoItem
@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
            --background-light: #f4f5f7;
            --text-dark: #333;
        }

        body {
            background-color: var(--background-light);
            font-family: 'Inter', sans-serif;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 2rem;
            max-width: 600px;
            margin: 2rem auto;
        }

        .form-title {
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 1px solid #e1e5eb;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
        }

        .text-danger {
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }

        .btn-primary {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 17px rgba(0, 0, 0, 0.2);
        }

        .d-flex {
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="form-title">
                Edit Task
            </h1>
            <form asp-action="Edit" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Task Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Details" class="form-label">Task Details</label>
                    <textarea asp-for="Details" class="form-control" rows="3" placeholder="Provide additional details (optional)"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedTo" class="form-label">Assigned To</label>
                    <input asp-for="AssignedTo" class="form-control" placeholder="Name or email of the assignee" />
                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateStarted" class="form-label">Start Date & Time</label>
                        <input asp-for="DateStarted" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DateStarted" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DateOfCompletion" class="form-label">Completion Date & Time</label>
                        <input asp-for="DateOfCompletion" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DateOfCompletion" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Task Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="" disabled>Select Status</option>
                        <option value="Pending">Pending</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="OnHold">On Hold</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("Index", "ToDo")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
